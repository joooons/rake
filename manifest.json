{
    "manifest_version": 3,
    "name": "Rake",
    "version": "1.01",
    "description": "extracts text from open tab based on user-defined query selectors and saves to text or open in new tab",
    "author": "joon chang",
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Rake",
        "default_icon": {
            "16": "images/leaf-16.png",
            "32": "images/leaf-32.png",
            "48": "images/leaf-48.png",
            "128": "images/leaf-128.png"
        }
    },
    "icons": {
        "16": "images/leaf-16.png",
        "32": "images/leaf-32.png",
        "48": "images/leaf-48.png",
        "128": "images/leaf-128.png"
    },
    "permissions": [
        "scripting",
        "activeTab"
    ]
}