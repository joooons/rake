{
    "manifest_version": 3,
    "name": "Rake",
    "version": "1.01",
    "description": "Chrome extension for scraping text from open tab according to user-defined query selectors. The extracted text can either be saved in a text file or displayed in a new tab.",
    "author": "joon chang",
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Rake",
        "default_icon": {
            "16": "images/leaf-16.png",
            "32": "images/leaf-32.png",
            "48": "images/leaf-48.png",
            "128": "images/leaf-128.png"
        }
    },
    "icons": {
        "16": "images/leaf-16.png",
        "32": "images/leaf-32.png",
        "48": "images/leaf-48.png",
        "128": "images/leaf-128.png"
    },
    "permissions": [
        "scripting",
        "activeTab"
    ]
}